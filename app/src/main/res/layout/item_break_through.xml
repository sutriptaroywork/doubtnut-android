<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="breakThrough"
            type="com.doubtnutapp.domain.payment.entities.BreakThrough" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewBreakThroughTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"
            android:fontFamily="@font/lato"
            android:textColor="@color/warm_grey"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/textViewBreakThroughTitleTimeDays"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Paid via Google pay" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewBreakThroughTitleTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/lato"
            android:textColor="@color/warm_grey"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textViewBreakThroughTitleTimeDays"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewBreakThroughTitle"
            tools:text="12/02/2020, 23:11 pm" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewBreakThroughTitleTimeDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/lato_black"
            android:textColor="@color/warm_grey"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/textViewBreakThroughTitleTime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewBreakThroughTitle"
            tools:text="30 days" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>