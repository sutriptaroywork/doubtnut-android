<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewCreateAPlaylist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="@string/create_new_playlist"
                android:textColor="@color/black_two"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editTextPlaylistName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/lato"
                android:hint="@string/playlist_name"
                android:inputType="textCapWords"
                android:singleLine="true"
                android:textSize="14sp"
                app:backgroundTint="@color/redTomato"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewCreateAPlaylist" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/buttonCancel"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/capsule_stroke_grey_solid_white"
                android:gravity="center"
                android:paddingStart="22dp"
                android:paddingEnd="22dp"
                android:text="@string/date_cancel"
                android:textAllCaps="true"
                android:textColor="@color/redTomato"
                app:layout_constraintBottom_toBottomOf="@+id/buttonCreate"
                app:layout_constraintEnd_toStartOf="@+id/buttonCreate"
                app:layout_constraintTop_toTopOf="@+id/buttonCreate" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/buttonCreate"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/capsule_solid_red_tomato"
                android:gravity="center"
                android:paddingStart="22dp"
                android:paddingEnd="22dp"
                android:text="@string/create"
                android:textAllCaps="true"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextPlaylistName" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>