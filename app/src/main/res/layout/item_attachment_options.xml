<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#eeeeee"
    android:padding="12dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/ivAttachment"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:padding="14dp"
        android:background="@drawable/circle_de266e"
        android:scaleType="centerInside"
        android:src="@drawable/ic_document"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvAttachment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/lato"
        android:letterSpacing="-0.02"
        android:text="@string/document"
        android:textColor="#6e6e6e"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivAttachment" />

    <ImageView
        android:id="@+id/ivGallery"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_marginStart="37dp"
        android:background="@drawable/circle_3276f4"
        android:padding="14dp"
        android:src="@drawable/ic_gallery"
        app:layout_constraintStart_toEndOf="@id/ivAttachment"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:letterSpacing="-0.02"
        android:text="@string/gallery"
        android:textColor="#6e6e6e"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ivGallery"
        app:layout_constraintStart_toStartOf="@+id/ivGallery"
        app:layout_constraintTop_toBottomOf="@+id/ivGallery" />

    <ImageView
        android:id="@+id/ivAudio"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_marginStart="37dp"
        android:background="@drawable/circle_3276f4"
        android:padding="14dp"
        android:src="@drawable/ic_headphones"
        app:layout_constraintStart_toEndOf="@id/ivGallery"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/lato"
        android:letterSpacing="-0.02"
        android:text="@string/audio"
        android:textColor="#6e6e6e"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ivAudio"
        app:layout_constraintStart_toStartOf="@+id/ivAudio"
        app:layout_constraintTop_toBottomOf="@+id/ivAudio" />

    <ImageView
        android:id="@+id/ivCameraAttachment"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_marginStart="37dp"
        android:background="@drawable/circle_3276f4"
        android:padding="14dp"
        android:src="@drawable/ic_photo_camera"
        app:layout_constraintStart_toEndOf="@id/ivAudio"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvCameraAttachment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/lato"
        android:letterSpacing="-0.02"
        android:text="@string/camera"
        android:textColor="#6e6e6e"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ivCameraAttachment"
        app:layout_constraintStart_toStartOf="@+id/ivCameraAttachment"
        app:layout_constraintTop_toBottomOf="@+id/ivCameraAttachment" />

</androidx.constraintlayout.widget.ConstraintLayout>