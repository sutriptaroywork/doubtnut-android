<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_top_bottomsheet_bg"
    android:padding="@dimen/dimen_16dp">


    <TextView
        android:id="@+id/tvActionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="64Views"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="50dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:paddingLeft="@dimen/dimen_24dp"
        android:paddingBottom="@dimen/dimen_8dp"
        android:src="@drawable/ic_close_black" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLikeViewCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvActionText"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_status_bootomsheet" />
</RelativeLayout>