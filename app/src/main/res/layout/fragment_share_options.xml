<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_top_bottomsheet_bg"
    android:clipToPadding="false"
    android:paddingStart="16dp"
    android:paddingTop="20dp"
    android:paddingEnd="16dp"
    android:paddingBottom="20dp"
    app:shapeAppearance="@style/MatchBottomSheetShapeAppearance">

    <TextView
        android:id="@+id/tvShareWhatsapp"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:drawablePadding="8dp"
        android:fontFamily="@font/lato"
        android:gravity="center_vertical"
        android:lineSpacingExtra="0.6sp"
        android:paddingStart="10dp"
        android:paddingTop="4dp"
        android:paddingEnd="10dp"
        android:paddingBottom="4dp"
        android:text="@string/share_on_whatsapp"
        android:textColor="@color/black_two"
        android:textSize="14sp"
        android:textStyle="normal"
        app:drawableStartCompat="@drawable/ic_whatsapp_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/tvShareWhatsapp"
        android:background="#c0c0c0"
        android:layout_marginTop="@dimen/dimen_10dp"
        />

    <TextView
        android:id="@+id/tvShareStudyGroup"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:drawablePadding="8dp"
        android:fontFamily="@font/lato"
        android:gravity="center_vertical"
        android:lineSpacingExtra="0.6sp"
        android:paddingStart="10dp"
        android:paddingTop="4dp"
        android:paddingEnd="10dp"
        android:paddingBottom="4dp"
        android:text="@string/share_on_study_grpup"
        android:textColor="@color/black_two"
        android:textSize="14sp"
        android:textStyle="normal"
        app:drawableStartCompat="@drawable/ic_study_group_share"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvShareWhatsapp" />

</androidx.constraintlayout.widget.ConstraintLayout>