<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="6dp"
        android:theme="@style/ToolbarTheme"
        app:contentInsetStart="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/buttonBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp"
                android:src="@drawable/ic_arrow_back_tomato"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewMainTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:padding="5dp"
                android:text="DN Wallet"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textViewPaymentHelp"
                app:layout_constraintStart_toEndOf="@+id/buttonBack"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewPaymentHelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:drawableLeft="@drawable/ic_icon_small_help"
                android:drawablePadding="@dimen/radius_5dp"
                android:fontFamily="@font/lato"
                android:gravity="end"
                android:maxWidth="100dp"
                android:padding="5dp"
                android:textColor="@color/orange_eb532c"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toEndOf="@+id/buttonBack"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="FAQ" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonPay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutTotalWallet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTotalWalletBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/lato"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Total Available Balance :" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTotalWalletBalanceValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/dimen_4dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/lato_bold"
                    android:minWidth="100dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@+id/tvTotalWalletBalance"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintTop_toTopOf="@+id/tvTotalWalletBalance"
                    tools:text="₹387.00 " />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvWalletAmounts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutTotalWallet"
                tools:itemCount="2"
                tools:listitem="@layout/item_wallet_amount"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/lato"
                android:gravity="end"
                android:text="₹"
                android:textColor="@color/redTomato"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvWalletAmounts" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/redTomato"
                android:fontFamily="@font/lato"
                android:inputType="number"
                android:maxLength="5"
                android:maxLines="1"
                android:hint="@string/enter_amount_here"
                android:textColor="@color/redTomato"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tvAmount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvAmount"
                app:layout_constraintTop_toTopOf="@+id/tvAmount"
                tools:text="10" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAddFifty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/capsule_stroke_grey_solid_white_two"
                android:paddingStart="18dp"
                android:paddingTop="5dp"
                android:paddingEnd="18dp"
                android:paddingBottom="5dp"
                android:text="@string/plus_fifty"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etAmount" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAddHundred"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/capsule_stroke_grey_solid_white_two"
                android:paddingStart="18dp"
                android:paddingTop="5dp"
                android:paddingEnd="18dp"
                android:paddingBottom="5dp"
                android:text="@string/plus_hundred"
                app:layout_constraintStart_toEndOf="@+id/tvAddFifty"
                app:layout_constraintTop_toBottomOf="@+id/etAmount" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAddFiveHundred"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/capsule_stroke_grey_solid_white_two"
                android:paddingStart="18dp"
                android:paddingTop="5dp"
                android:paddingEnd="18dp"
                android:paddingBottom="5dp"
                android:text="@string/plus_five_hundred"
                app:layout_constraintStart_toEndOf="@+id/tvAddHundred"
                app:layout_constraintTop_toBottomOf="@+id/etAmount" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/buttonViewPaymentHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="14dp"
                android:background="@drawable/bg_rounded_corner_white_fill_4dp"
                android:backgroundTint="@color/purple_f3e4ff"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingStart="12dp"
                android:paddingEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAddFiveHundred">

                <ImageView
                    android:id="@+id/ivPaymentHistory"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_icon_small_history"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/lato"
                    android:text="@string/view_payment_history"
                    android:textColor="@color/purple_54138a"
                    android:textSize="16sp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ivPaymentHistoryArrow"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ivPaymentHistory"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivPaymentHistoryArrow"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_arrow_forward"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/purple_54138a" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutBestSeller"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buttonViewPaymentHistory">

                <TextView
                    android:id="@+id/tvBestSeller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:textColor="@color/brown_grey"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="BEST SELLERS" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:background="@drawable/rectangle_stroke_grey_solid_white"
                    android:padding="@dimen/dimen_10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvBestSeller">

                    <ImageView
                        android:id="@+id/ivBestSeller"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@drawable/ic_icon_small_copy" />

                    <TextView
                        android:id="@+id/tvTitleBestSeller"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_12dp"
                        android:fontFamily="@font/lato"
                        android:lineSpacingExtra="5.4sp"
                        android:textColor="#273de9"
                        android:textSize="@dimen/dimen_16sp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/tvPriceBestSeller"
                        app:layout_constraintTop_toBottomOf="@id/ivBestSeller"
                        tools:text="IIT JEE 2021 | Crash Course" />

                    <TextView
                        android:id="@+id/tvPriceBestSeller"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_12dp"
                        android:fontFamily="@font/lato_black"
                        android:gravity="end"
                        android:lineSpacingExtra="5.4sp"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        app:layout_constraintLeft_toRightOf="@id/tvTitleBestSeller"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ivBestSeller"
                        tools:text="₹6,999" />

                    <TextView
                        android:id="@+id/tvStartingBestSeller"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4dp"
                        android:fontFamily="@font/lato"
                        android:gravity="end"
                        android:letterSpacing="0.02"
                        android:lineSpacingExtra="4.6sp"
                        android:text="Starting"
                        android:textColor="@color/grey_medium"
                        android:textSize="13sp"
                        android:textStyle="normal"
                        app:layout_constraintLeft_toRightOf="@id/tvTitleBestSeller"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvPriceBestSeller" />

                    <TextView
                        android:id="@+id/tvPoweredBy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4dp"
                        android:fontFamily="@font/lato"
                        android:lineSpacingExtra="3.9sp"
                        android:text="Powered by Doubtnut"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:textStyle="normal"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvTitleBestSeller" />

                    <TextView
                        android:id="@+id/tvLanguageBestSeller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_12dp"
                        android:background="@color/grey_f2f2f2"
                        android:gravity="center"
                        android:lineSpacingExtra="4.9sp"
                        android:padding="@dimen/radius_5dp"
                        android:textColor="@color/grey_dark"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvPoweredBy"
                        tools:text="English Medium" />

                    <TextView
                        android:id="@+id/tvStarsBestSeller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="@dimen/dimen_12dp"
                        android:drawableEnd="@drawable/ic_icon_small_star_filled"
                        android:gravity="center"
                        android:lineSpacingExtra="4.9sp"
                        android:padding="@dimen/radius_5dp"
                        android:textColor="@color/grey_medium"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintLeft_toRightOf="@id/tvLanguageBestSeller"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvPoweredBy"
                        tools:text="4.8" />

                    <Button
                        android:id="@+id/buttonBuyNow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_16dp"
                        android:background="@color/orange_eb532c"
                        android:fontFamily="@font/lato"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvLanguageBestSeller"
                        tools:text="Buy Now" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.doubtnutapp.course.widgets.VpaWidget
                android:id="@+id/viewVpa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutBestSeller" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/apbBannerRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewVpa"
                tools:listitem="@layout/apb_banner_item" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutUseWallet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rectangle_stroke_grey_solid_white"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/apbBannerRecyclerView"
                tools:visibility="visible">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvWhyWalletTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:textColor="#CFB53B"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Why use DN Wallet" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/walletLayoutOne"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/walletLayoutTwo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvWhyWalletTitle"
                    app:layout_constraintWidth_percent="0.33">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageViewOne"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvWalletOne"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="3"
                        android:minLines="3"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imageViewOne"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Title Title Title Title Title" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/walletLayoutTwo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/walletLayoutThree"
                    app:layout_constraintStart_toEndOf="@+id/walletLayoutOne"
                    app:layout_constraintTop_toBottomOf="@+id/tvWhyWalletTitle"
                    app:layout_constraintWidth_percent="0.33">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageViewTwo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvWalletTwo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="3"
                        android:minLines="3"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imageViewTwo"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Title Title Title Title Title" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/walletLayoutThree"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/walletLayoutTwo"
                    app:layout_constraintTop_toBottomOf="@+id/tvWhyWalletTitle"
                    app:layout_constraintWidth_percent="0.33">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageViewThree"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvWalletThree"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="2dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="3"
                        android:minLines="3"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imageViewThree"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Title Title Title Title Title" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewTitlePaymentOption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:paddingTop="@dimen/dimen_14dp"
                android:paddingBottom="@dimen/dimen_8dp"
                android:text="@string/payment_methods"
                android:textColor="@color/warm_grey"
                android:textSize="11sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutUseWallet" />

            <RadioGroup
                android:id="@+id/radioGroupPaymentOption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewTitlePaymentOption">

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/radioButtonPaytm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_stroke_grey_solid_white"
                    android:drawablePadding="@dimen/dimen_8dp"
                    android:minHeight="50dp"
                    android:padding="8dp"
                    android:paddingBottom="@dimen/dimen_8dp"
                    android:text="Paytm"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/radioButtonRazorpay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_stroke_grey_solid_white"
                    android:checked="true"
                    android:drawableRight="@drawable/ic_card"
                    android:drawablePadding="@dimen/dimen_8dp"
                    android:minHeight="50dp"
                    android:padding="8dp"
                    android:text="UPI / Debit Card/ Internet Banking / Others"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </RadioGroup>

            <ImageView
                android:id="@+id/imageViewPaytmLogo"
                android:layout_width="28dp"
                android:layout_height="18dp"
                android:layout_marginTop="@dimen/dimen_14dp"
                android:layout_marginRight="@dimen/dimen_8dp"
                android:src="@drawable/ic_paytm"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="@+id/radioGroupPaymentOption"
                app:layout_constraintTop_toTopOf="@+id/radioGroupPaymentOption" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewTitlePaymentLink"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:paddingTop="@dimen/dimen_14dp"
                android:paddingBottom="@dimen/dimen_8dp"
                android:textColor="@color/warm_grey"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioGroupPaymentOption" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutPaymentLink"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rectangle_stroke_grey_solid_white"
                android:padding="@dimen/dimen_10dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewTitlePaymentLink"
                tools:visibility="visible">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewPaymentLinkInfoTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:text="@string/payment_link"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Payment karne me pareshani?" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewPaymentLinkDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_4dp"
                    android:text="@string/payment_link"
                    android:textColor="@color/grey_504949"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewPaymentLinkInfoTitle"
                    tools:text="Payment karne me pareshani?" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewPaymentLinkKnowMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:paddingRight="4dp"
                    android:paddingBottom="@dimen/dimen_18dp"
                    android:text="@string/know_more"
                    android:textColor="@color/color_eb532c"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewPaymentLinkDescription"
                    tools:text="@string/know_more"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/ivDropDown"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="@dimen/dimen_4dp"
                    android:src="@drawable/ic_arrow_down_filled"
                    app:layout_constraintLeft_toRightOf="@+id/textViewPaymentLinkKnowMore"
                    app:layout_constraintTop_toTopOf="@+id/textViewPaymentLinkKnowMore" />

                <LinearLayout
                    android:id="@+id/layoutSharePaymentLink"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:layout_marginRight="@dimen/dimen_8dp"
                    android:background="@drawable/bg_button_share_payment_link"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_8dp"
                    android:text="@string/payment_link"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewPaymentLinkKnowMore"
                    tools:text="">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:clickable="false"
                        android:scaleType="fitXY"
                        android:src="@drawable/whatsapp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvSharePaymentLink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_4dp"
                        android:clickable="false"
                        android:text="@string/payment_link"
                        android:textColor="@color/green_54b726"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:text="Share Payment Link" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvCourseCarouselsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/purple_f8f9ff"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/title_wallet_recommend_courses"
                android:textColor="@color/black_two"
                android:textSize="15sp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/layoutPaymentLink"
                tools:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCourseCarousels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                tools:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvCourseCarouselsTitle" />

            <ProgressBar
                android:id="@+id/pbCourseCarousels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvCourseCarouselsTitle"
                tools:visibility="visible" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <Button
        android:id="@+id/buttonPay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/grey_cbcbcb"
        android:enabled="false"
        android:fontFamily="@font/lato_bold"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:text="Add Money"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>