<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivTickOuter"
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dimen_10dp"
        app:shapeAppearanceOverlay="@style/CircularImageView"
        android:background="@color/grey_808080"
        android:layout_marginStart="@dimen/dimen_10dp"
        app:layout_constraintStart_toStartOf="parent"
        >



    </com.google.android.material.imageview.ShapeableImageView>



    <ImageView
        android:id="@+id/imageViewTick"
        android:layout_width="@dimen/dimen_12dp"
        android:layout_height="@dimen/dimen_12dp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_marginStart="@dimen/dimen_5dp"
        app:layout_constraintTop_toTopOf="@+id/ivTickOuter"
        app:layout_constraintStart_toStartOf="@+id/ivTickOuter"
        android:src="@drawable/tick"
        />

    <TextView
        android:id="@+id/tvTitleActionLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginEnd="@dimen/dimen_10dp"
        app:layout_constraintStart_toEndOf="@+id/ivTickOuter"
        app:layout_constraintEnd_toStartOf="@+id/tvYes"
        android:layout_marginStart="@dimen/dimen_10dp"
        app:layout_constraintTop_toTopOf="@+id/ivTickOuter"
        android:text="Kya aapko sahi jawaab mila?"/>

    <TextView
        android:id="@+id/tvSubtitleActionLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:textStyle="normal"
        android:textSize="11.5sp"
        android:textColor="@color/grey_504949"
        android:paddingEnd="@dimen/dimen_4dp"
        app:layout_constraintStart_toEndOf="@+id/ivTickOuter"
        app:layout_constraintEnd_toStartOf="@+id/tvYes"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleActionLayout"
        android:text="Solve 19 more to earn a new badge"/>


    <TextView
        android:id="@+id/tvNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/dimen_10dp"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        app:layout_constraintTop_toTopOf="@+id/ivTickOuter"
        android:text="NO"/>


    <TextView
        android:id="@+id/tvYes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:textStyle="normal"
        android:textSize="12sp"
        android:padding="@dimen/dimen_10dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toStartOf="@+id/tvNo"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        app:layout_constraintTop_toTopOf="@+id/ivTickOuter"
        android:text="YES"/>


    <TextView
        android:id="@+id/tvTimeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:textStyle="normal"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dimen_10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dimen_10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSubtitleActionLayout"
        android:layout_marginTop="4dp"
        android:textColor="#7a7a7a"
        android:text="01:18 PM"/>



</androidx.constraintlayout.widget.ConstraintLayout>