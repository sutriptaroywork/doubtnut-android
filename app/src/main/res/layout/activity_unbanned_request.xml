<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:elevation="4dp"
            app:contentInsetStart="@dimen/dimen_0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvToolbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="@string/unban_fragment_title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_20dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <View
            android:id="@+id/statusDivider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_4dp"
            android:background="@color/grey_feed"
            android:visibility="visible" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:paddingLeft="@dimen/dimen_16dp"
                    android:paddingTop="@dimen/dimen_32dp"
                    android:paddingRight="@dimen/dimen_16dp"
                    android:text="@string/unban_fragment_heading"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:paddingLeft="@dimen/dimen_16dp"
                    android:paddingTop="12dp"
                    android:paddingRight="@dimen/dimen_16dp"
                    android:text="Kya aapne isme se kuchh kara hai? "
                    android:textColor="@color/grey_504949"
                    android:textSize="@dimen/dimen_15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/bg_unban_conditions"
                    android:orientation="vertical"
                    android:paddingLeft="8dp"
                    android:paddingTop="12dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:paddingLeft="@dimen/dimen_16dp"
                        android:paddingTop="12dp"
                        android:paddingRight="@dimen/dimen_16dp"
                        android:text="Community Rules :"
                        android:textColor="@color/grey_808080"
                        android:textSize="@dimen/dimen_12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:paddingLeft="@dimen/dimen_16dp"
                        android:paddingTop="10dp"
                        android:paddingRight="@dimen/dimen_16dp"
                        android:text="1. No Vulgarity"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:paddingLeft="@dimen/dimen_16dp"
                        android:paddingTop="6dp"
                        android:paddingRight="@dimen/dimen_16dp"
                        android:text="2. No Profanity"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:paddingLeft="@dimen/dimen_16dp"
                        android:paddingTop="6dp"
                        android:paddingRight="@dimen/dimen_16dp"
                        android:text="3. No Bullying"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:paddingLeft="@dimen/dimen_16dp"
                        android:paddingTop="6dp"
                        android:paddingRight="@dimen/dimen_16dp"
                        android:text="4. No Violence"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/lato"
                        android:paddingLeft="@dimen/dimen_16dp"
                        android:paddingTop="6dp"
                        android:paddingRight="@dimen/dimen_16dp"
                        android:text="5. No Ragging "
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_18sp" />


                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <CheckBox
            android:id="@+id/checkboxUnbanPolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/submitUnbanRequest"
            android:layout_marginLeft="@dimen/dimen_16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="12dp"
            android:checked="false"
            android:fontFamily="@font/lato"
            android:gravity="top"
            android:text="Maine Doubtnut mein Posts, Comments, Gupshup ya Status main kahin bhi Community Rules nahi tode hai."
            android:textColor="#504949"
            android:textSize="@dimen/font_14sp" />

        <TextView
            android:id="@+id/submitUnbanRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_unban_button"
            android:enabled="false"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:padding="@dimen/dimen_16dp"
            android:text="Submit for review"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_15sp" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="true">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>
</FrameLayout>