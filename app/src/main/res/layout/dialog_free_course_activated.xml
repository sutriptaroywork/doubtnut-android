<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageClose"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="@dimen/dimen_14dp"
        android:layout_marginBottom="@dimen/dimen_14dp"
        android:background="@color/white"
        android:src="@drawable/ic_close_black"
        app:contentPadding="5dp"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:shapeAppearanceOverlay="@style/CircularImageView" />

<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginStart="60dp"
    android:layout_marginEnd="60dp"
    android:layout_marginTop="30dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/successLottieAnimationView"
        android:layout_width="212.5dp"
        android:layout_height="212.5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="trial_activated.zip"
        app:lottie_loop="true"
        />

    <TextView
        android:id="@+id/buttonContinue"
        android:layout_width="212.5dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/successLottieAnimationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:textColor="@color/white"
        android:fontFamily="@font/lato"
        android:textSize="14sp"
        android:background="@color/colorPrimary"
        android:textStyle="bold"
        android:foreground="@drawable/selectable_item_background"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:text="Padhai Shuru Karein"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>