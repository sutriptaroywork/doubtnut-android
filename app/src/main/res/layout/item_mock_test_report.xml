<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_1dp"
    android:background="@color/light_grey"
    android:paddingTop="@dimen/dimen_6dp"
    android:paddingBottom="@dimen/dimen_6dp"
    android:weightSum="5.5">

    <TextView
        android:id="@+id/tv_subject"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_weight="1.5"
        android:fontFamily="@font/lato"
        android:gravity="start"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_12sp"
        android:textStyle="bold"
        tools:text="Subject" />

    <TextView
        android:id="@+id/tv_correct_count"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:textColor="@color/green_56bd5b"
        android:textSize="@dimen/dimen_12sp"
        tools:text="1" />

    <TextView
        android:id="@+id/tv_incorrect_count"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:textColor="@color/red_e34c4c"
        android:textSize="@dimen/dimen_12sp"
        tools:text="1" />

    <TextView
        android:id="@+id/tv_skipped_count"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_12sp"
        tools:text="1" />

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:textColor="@color/blue_017aff"
        android:textSize="@dimen/dimen_12sp"
        android:visibility="visible"
        tools:text="1" />

</LinearLayout>