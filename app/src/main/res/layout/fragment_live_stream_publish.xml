<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <com.pedro.rtplibrary.view.AutoFitTextureView
        android:id="@+id/textureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/btnStatus"
        app:layout_constraintRight_toLeftOf="@+id/btnStatus"
        app:layout_constraintTop_toTopOf="@+id/btnStatus" />

    <TextView
        android:id="@+id/btnStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_22dp"
        android:paddingHorizontal="@dimen/dimen_12dp"
        android:paddingVertical="@dimen/dimen_4dp"
        android:textColor="@android:color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnSwitchCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/ic_flip_camera_white_24dp"
        app:layout_constraintBottom_toTopOf="@+id/btnEnd"
        app:layout_constraintLeft_toLeftOf="@+id/btnEnd"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/btnEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_12dp"
        android:layout_marginBottom="85dp"
        android:background="#44ffffff"
        android:fontFamily="@font/lato_bold"
        android:paddingHorizontal="8dp"
        android:paddingVertical="@dimen/dimen_4dp"
        android:text="END"
        android:textColor="@color/white"
        android:textSize="@dimen/font_14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>