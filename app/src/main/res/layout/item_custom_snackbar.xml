<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/snackbar_item_container"
    android:layout_width="match_parent"
    android:paddingHorizontal="16dp"
    tools:background="#000000"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_snackbar_icon"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        tools:src="@tools:sample/avatars"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_snackbar_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:maxLines="2"
        app:layout_goneMarginStart="0dp"
        android:paddingVertical="12dp"
        android:textColor="#ffffff"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_snackbar_action"
        app:layout_constraintStart_toEndOf="@id/iv_snackbar_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Priyanka's Doubt was just answered \nPriyanka's Doubt was just answeredPriyanka's Doubt was just answered \nPriyanka's Doubt was just answered" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_snackbar_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:paddingVertical="12dp"
        android:textColor="#eb532c"
        android:textSize="14sp"
        android:gravity="center"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="See Doubt" />

</androidx.constraintlayout.widget.ConstraintLayout>