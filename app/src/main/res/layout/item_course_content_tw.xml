<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dimen_8dp">

    <ImageView
        android:id="@+id/imageCourseContent"
        android:layout_width="@dimen/dimen_8dp"
        android:layout_height="@dimen/dimen_8dp"
        app:layout_constraintBottom_toBottomOf="@id/tvCourseContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvCourseContent" />

    <TextView
        android:id="@+id/tvCourseContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_4dp"
        android:fontFamily="@font/lato"
        android:textSize="@dimen/dimen_12sp"
        app:layout_constraintStart_toEndOf="@+id/imageCourseContent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="24 Videos" />

</androidx.constraintlayout.widget.ConstraintLayout>