<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_main"
        android:layout_width="54dp"
        android:layout_height="47dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars"
        tools:visibility="visible" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/lato_bold"
        android:lineSpacingExtra="2sp"
        android:textColor="#272727"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_main"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginStart="0dp"
        tools:text="Apne dosto ko bhi banaiyae iss scholarship test ka hissa" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_invite_whatsapp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/lato_bold"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:letterSpacing="0"
        android:minHeight="32dp"
        android:outlineProvider="bounds"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:textStyle="normal"
        app:backgroundTint="#00dc0c"
        app:cardCornerRadius="4dp"
        app:cornerRadius="4dp"
        app:layout_constraintEnd_toStartOf="@id/btn_invite_telegram"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_goneMarginEnd="1dp"
        app:layout_goneMarginStart="0dp"
        tools:ignore="UnusedAttribute"
        tools:text="Action 1"
        tools:visibility="visible" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_invite_telegram"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="1dp"
        android:fontFamily="@font/lato_bold"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:letterSpacing="0"
        android:minHeight="32dp"
        android:outlineProvider="bounds"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:textStyle="normal"
        app:backgroundTint="#00b8fc"
        app:cardCornerRadius="4dp"
        app:cornerRadius="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_invite_whatsapp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_goneMarginStart="1dp"
        tools:ignore="UnusedAttribute"
        tools:text="Action 2"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>