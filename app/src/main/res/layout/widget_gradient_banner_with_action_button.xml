<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#efdaff">


    <ImageView
        android:id="@+id/imageViewLeft"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:layout_marginBottom="@dimen/dimen_15dp"
        android:visibility="visible"
        android:src="@drawable/ic_points_badge"
        android:paddingBottom="@dimen/dimen_20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:fontFamily="@font/lato_bold"
        android:lineSpacingExtra="6sp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_goneMarginStart="@dimen/dimen_16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewLeft"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dimen_16dp"
        tools:text="Solve &amp; Earn Badges and Rewards" />


    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:fontFamily="@font/lato"
        android:lineSpacingExtra="4sp"
        android:textColor="@color/grey_504949"
        android:textSize="12sp"
        app:layout_goneMarginStart="@dimen/dimen_16dp"
        android:textStyle="normal"
        android:paddingBottom="@dimen/dimen_20dp"
        app:layout_constraintEnd_toStartOf="@+id/buttonAction"
        app:layout_constraintStart_toEndOf="@+id/imageViewLeft"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        tools:text="Revise your syllabus by solving doubts and earn badges for your profile." />


    <TextView
        android:id="@+id/buttonAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_18dp"
        android:fontFamily="@font/lato"
        android:letterSpacing="-0.02"
        android:paddingStart="@dimen/dimen_12dp"
        android:paddingEnd="@dimen/dimen_12dp"
        android:paddingTop="@dimen/dimen_8dp"
        android:paddingBottom="@dimen/dimen_8dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        tools:text="Know more" />

    <ImageView
        android:id="@+id/imageRight"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="@dimen/dimen_18dp"
        android:paddingBottom="@dimen/dimen_15dp"
        android:fontFamily="@font/lato_bold"
        android:letterSpacing="-0.02"
        android:textColor="#6804b7"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSubtitle"
        tools:text="Know more" />

    <ImageView
        android:id="@+id/ivArrowRight"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintTop_toTopOf="@+id/buttonAction"
        app:layout_constraintStart_toEndOf="@+id/buttonAction"
        android:layout_marginStart="-8dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        />


    <View
        android:id="@+id/viewProgress"
        android:layout_width="82dp"
        android:layout_height="@dimen/dimen_4dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSubtitle"
        app:layout_constraintStart_toStartOf="@+id/tvSubtitle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dimen_15dp"
        android:background="@color/colorPrimary">
    </View>


</androidx.constraintlayout.widget.ConstraintLayout>