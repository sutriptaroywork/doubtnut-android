<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_16dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ea532e"
            app:navigationIcon="@drawable/ic_arrow_back_video"
            app:title="Community Guidelines"
            app:titleTextColor="@color/white" />

        <TextView
            android:id="@+id/tvGuidelinesMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:fontFamily="@font/lato"
            android:paddingTop="@dimen/dimen_8dp"
            android:textColor="#6a6a6a"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/viewGuidelines1"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:animateLayoutChanges="true"
            android:background="?selectableItemBackground"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dimen_8dp"
            android:paddingVertical="@dimen/dimen_4dp">

            <TextView
                android:id="@+id/tvGuidelineTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrow_right"
                android:drawablePadding="@dimen/dimen_8dp"
                android:drawableTint="@color/tomato"
                android:fontFamily="@font/lato_bold"
                android:textColor="#ea532e"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvGuidelineDetail1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:drawablePadding="@dimen/dimen_16dp"
                android:fontFamily="@font/lato"
                android:textColor="#6a6a6a"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewGuidelines2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:animateLayoutChanges="true"
            android:background="?selectableItemBackground"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dimen_8dp"
            android:paddingVertical="@dimen/dimen_4dp">

            <TextView
                android:id="@+id/tvGuidelineTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrow_right"
                android:drawablePadding="@dimen/dimen_8dp"
                android:drawableTint="@color/tomato"
                android:fontFamily="@font/lato_bold"
                android:textColor="#ea532e"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvGuidelineDetail2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:drawablePadding="@dimen/dimen_16dp"
                android:fontFamily="@font/lato"
                android:textColor="#6a6a6a"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewGuidelines3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:animateLayoutChanges="true"
            android:background="?selectableItemBackground"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dimen_8dp"
            android:paddingVertical="@dimen/dimen_4dp">

            <TextView
                android:id="@+id/tvGuidelineTitle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrow_right"
                android:drawablePadding="@dimen/dimen_8dp"
                android:drawableTint="@color/tomato"
                android:fontFamily="@font/lato_bold"
                android:textColor="#ea532e"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvGuidelineDetail3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:drawablePadding="@dimen/dimen_16dp"
                android:fontFamily="@font/lato"
                android:textColor="#6a6a6a"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewGuidelines4"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/dimen_16dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:animateLayoutChanges="true"
            android:background="?selectableItemBackground"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dimen_8dp"
            android:paddingVertical="@dimen/dimen_4dp">

            <TextView
                android:id="@+id/tvGuidelineTitle4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_arrow_right"
                android:drawablePadding="@dimen/dimen_8dp"
                android:drawableTint="@color/tomato"
                android:fontFamily="@font/lato_bold"
                android:textColor="#ea532e"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvGuidelineDetail4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:drawablePadding="@dimen/dimen_16dp"
                android:fontFamily="@font/lato"
                android:textColor="#6a6a6a"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>


</ScrollView>
