<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/d0UserTimer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ff9d7e"
    android:paddingBottom="8dp"
    android:visibility="gone"
    tools:visibility="visible">

    <TextView
        android:id="@+id/tvD0Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/lato"
        android:letterSpacing="0.02"
        android:maxLines="2"
        android:textColor="#2b2b2b"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toStartOf="@+id/ivD0TimerClose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Aaj 4 questions pucho aur 7 din tak free course paao!" />

    <ImageView
        android:id="@+id/ivD0TimerStart"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/ic_close_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvD0Title"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvRemainingTime"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/lato"
        android:textColor="#273de9"
        android:textSize="13sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivD0TimerClose"
        app:layout_constraintStart_toEndOf="@+id/ivD0TimerStart"
        app:layout_constraintTop_toBottomOf="@+id/tvD0Title"
        tools:text="24h : 00m : 00s" />

    <ImageView
        android:id="@+id/ivD0TimerClose"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:padding="4dp"
        android:src="@drawable/ic_close_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>