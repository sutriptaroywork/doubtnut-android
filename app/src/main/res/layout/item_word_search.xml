<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:layout_margin="@dimen/dimen_4dp"
        android:paddingStart="@dimen/dimen_16dp"
        android:paddingEnd="@dimen/dimen_16dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:id="@+id/search_recent_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:foregroundGravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="ContentDescription"
            android:src="@drawable/ic_recent" />

        <TextView
            android:id="@+id/searchName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:fontFamily="@font/lato"
            android:maxLines="1"
            android:textColor="@color/search_title"
            android:textSize="12sp"
            android:foregroundGravity="center"
            app:layout_constraintStart_toEndOf="@id/search_recent_image"
            app:layout_constraintLeft_toLeftOf="@+id/search_recent_image"
            app:layout_constraintRight_toLeftOf="@+id/ivSubmitText"
            app:layout_constraintEnd_toStartOf="@+id/ivSubmitText"
            android:paddingRight="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Complex Numbers" />

        <ImageView
            android:id="@+id/ivSubmitText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"
            android:src="@drawable/ic_suggestions_arrow" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>