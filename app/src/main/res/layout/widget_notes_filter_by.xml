<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue_e0eaff">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvFilterBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:fontFamily="@font/lato"
        android:padding="12dp"
        android:text="@string/filter_by_text"
        android:textColor="@color/grey_dark"
        android:textSize="10sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Filter By:" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvFilterByItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/capsule_stroke_tomato_solid_white"
        android:drawableEnd="@drawable/ic_arrow_black_down"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingTop="6dp"
        android:paddingEnd="8dp"
        android:paddingBottom="6dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvFilterBy"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="नोट्स के प्रकार " />

</androidx.constraintlayout.widget.ConstraintLayout>