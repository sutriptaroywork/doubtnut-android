<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners_stroke_f3f3f3"
    android:backgroundTint="#ededed"
    android:paddingStart="20dp"
    android:paddingTop="12dp"
    android:paddingEnd="11dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/lato"
        android:lineSpacingExtra="6sp"
        android:maxLines="2"
        android:textColor="#2f2f2f"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvCount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        tools:text="Ask one Question and watch it’s video solution to earn 5 DNR Ask one Question and watch it’s video solution to earn 5 DNR Ask one Question and watch it’s video solution to earn 5 DNR" />

    <TextView
        android:id="@+id/tvCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="#7379f8"
        android:textSize="20sp"
        android:translationY="-1dp"
        android:textStyle="normal"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivCoin"
        app:layout_constraintStart_toEndOf="@id/tvTitle"
        tools:text="10" />

    <ImageView
        android:id="@+id/ivCoin"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="@id/tvTitle"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="ContentDescription"
        tools:src="@color/IndianRed" />

    <TextView
        android:id="@+id/tvUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:textColor="#7379f8"
        android:textSize="12sp"
        android:textStyle="normal"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/ivCoin"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintBottom_toBottomOf="@id/tvCount"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="DNR" />

</androidx.constraintlayout.widget.ConstraintLayout>