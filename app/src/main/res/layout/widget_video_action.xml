<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/tvLike"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:drawableTopCompat="@drawable/selector_video_like"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvDislike"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Like" />

    <TextView
        android:id="@+id/tvDislike"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:drawableTopCompat="@drawable/selector_video_dislike"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvComment"
        app:layout_constraintStart_toEndOf="@+id/tvLike"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Dislike" />

    <TextView
        android:id="@+id/tvComment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:drawableTopCompat="@drawable/ic_comment_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvShare"
        app:layout_constraintStart_toEndOf="@+id/tvDislike"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Comment" />

    <TextView
        android:id="@+id/tvShare"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:drawableTopCompat="@drawable/ic_whatsapp_video"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvWatchLater"
        app:layout_constraintStart_toEndOf="@+id/tvComment"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="12434" />

    <TextView
        android:id="@+id/tvWatchLater"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:drawableTopCompat="@drawable/ic_watch_later2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvShare"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Dislike" />

</androidx.constraintlayout.widget.ConstraintLayout>