<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutScratchCard"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginStart="@dimen/dimen_12dp"
    android:layout_marginTop="@dimen/dimen_12dp"
    android:layout_marginEnd="@dimen/dimen_12dp"
    android:background="@color/purple">

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_18dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginEnd="@dimen/dimen_18dp"
        android:fontFamily="@font/lato_bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/scratchIv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/scratchIv"
        tools:text="LUCKY"
        tools:textColor="@color/black" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="@+id/title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:text="SCRATCH"
        tools:textColor="@color/black" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBuyNow"
        android:layout_width="90dp"
        android:layout_height="46dp"
        android:layout_marginStart="@dimen/dimen_8dp"
        android:layout_marginEnd="@dimen/dimen_8dp"
        android:layout_marginBottom="@dimen/dimen_12dp"
        android:backgroundTint="@color/color_e4bd60"
        android:fontFamily="@font/lato_bold"
        android:gravity="center"
        android:padding="@dimen/dimen_8dp"
        android:text="Buy Now"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_13sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/scratchIv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        tools:ignore="HardcodedText"
        tools:textColor="@color/white" />

    <ImageView
        android:id="@+id/scratchIv"
        android:layout_width="160dp"
        android:layout_height="130dp"
        android:layout_marginTop="@dimen/dimen_18dp"
        android:layout_marginEnd="@dimen/dimen_18dp"
        android:layout_marginBottom="@dimen/dimen_18dp"
        android:background="@color/scratch_end_gradient"
        android:fontFamily="@font/lato"
        android:importantForAccessibility="no"
        android:textSize="@dimen/dimen_12sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.doubtnutapp.liveclass.ui.views.ScratchTextView
        android:id="@+id/scratchTv"
        android:layout_width="160dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dimen_18dp"
        android:layout_marginEnd="@dimen/dimen_18dp"
        android:layout_marginBottom="@dimen/dimen_18dp"
        android:background="@color/white"
        android:fontFamily="@font/lato"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scratchedTv"
        android:layout_width="160dp"
        android:layout_height="130dp"
        android:layout_marginTop="@dimen/dimen_18dp"
        android:layout_marginEnd="@dimen/dimen_18dp"
        android:layout_marginBottom="@dimen/dimen_18dp"
        android:background="@color/white"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>