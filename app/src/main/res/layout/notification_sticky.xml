<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="57dp"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:layout_weight="10"
        android:background="@drawable/bg_sticky_notification"
        android:padding="8dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_logo_sticky_notification"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/verticalDivider"
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/logo"
            android:background="@color/tomato" />

        <TextView
            android:id="@+id/textViewAskDoubt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/imageViewCamera"
            android:layout_toEndOf="@+id/verticalDivider"
            android:singleLine="true"
            android:text="@string/ask_your_doubt"
            android:textColor="@color/tomato"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageViewCamera"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/imageViewSearch"
            android:src="@drawable/ic_sticky_notification_camera"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imageViewSearch"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_sticky_notiication_search"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.6"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageViewSetting"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_sticky_notification_setting"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

</LinearLayout>