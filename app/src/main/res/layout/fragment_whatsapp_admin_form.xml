<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="32dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/phoneLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_capsule_stroke_wramgrey"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/countryCodePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:paddingRight="8dp"
            android:text="@string/country_code_india"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="14dp"
            android:layout_margin="4dp"
            android:background="@color/greyBlack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/countryCodePicker"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:backgroundTint="@color/white"
            android:cursorVisible="true"
            android:ellipsize="end"
            android:focusable="true"
            android:gravity="center_vertical"
            android:hint="Apka Whatsapp Mobile Number"
            android:inputType="number"
            android:maxLength="10"
            android:singleLine="true"
            android:textColorHint="@color/color_e2e2e2"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/divider"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/flName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_capsule_stroke_wramgrey"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:inputType="textPersonName"
            android:hint="Aapka poora naam"
            android:textColor="@color/black"
            android:textColorHint="@color/color_e2e2e2"
            android:textSize="13sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/flState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_capsule_stroke_wramgrey"
        android:clickable="true"
        android:paddingHorizontal="8dp"
        android:paddingVertical="16dp">

        <TextView
            android:id="@+id/etState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:clickable="false"
            android:focusable="false"
            android:hint="Aapka State"
            android:textColor="@color/black"
            android:textColorHint="@color/color_e2e2e2"
            android:textSize="13sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/flDistrict"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_capsule_stroke_wramgrey"
        android:clickable="true"
        android:paddingHorizontal="8dp"
        android:paddingVertical="16dp">

        <TextView
            android:id="@+id/etDistrict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:clickable="false"
            android:focusable="false"
            android:hint="Aapka District"
            android:textColor="@color/black"
            android:textColorHint="@color/color_e2e2e2"
            android:textSize="13sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/flFriendsCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_capsule_stroke_wramgrey"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etFriendsCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:hint="Aapke whatsapp friends ka count"
            android:textColor="@color/black"
            android:inputType="number"
            android:maxLength="3"
            android:textColorHint="@color/color_e2e2e2"
            android:textSize="13sp" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lato"
        android:lineSpacingExtra="4.2sp"
        android:text="*Humari Community Team aapka profile review karke aapko contact karegi. Thank you!"
        android:textColor="@color/grey_808080"
        android:textSize="12sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/btnSubmitAdminForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:background="@color/warm_grey"
        android:enabled="false"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:padding="16dp"
        android:text="Apply Kare!"
        android:textColor="@color/white"
        android:textStyle="bold" />
</LinearLayout>