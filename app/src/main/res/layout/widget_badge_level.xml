<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/tvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dimen_20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:textColor="#999999"
        tools:text="Level 1"/>


    <TextView
        android:id="@+id/tvMedalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dimen_6dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvLabel"
        tools:text="Bronze Solver"/>



    <TextView
        android:id="@+id/tvMedalSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@color/purple"
        android:layout_marginTop="@dimen/dimen_6dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvMedalTitle"
        tools:text="* Earn exciting rewards"/>


    <ImageView
        android:id="@+id/ivSecondBadge"
        android:layout_width="@dimen/dimen_40dp"
        android:layout_height="@dimen/dimen_50dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:src="@drawable/ic_bg_badge_85dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/tvTitleSecondBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:textStyle="bold"
        android:textSize="10sp"
        android:textColor="@color/grey_504949"
        android:layout_marginTop="@dimen/dimen_4dp"
        app:layout_constraintStart_toStartOf="@+id/ivSecondBadge"
        android:layout_marginStart="-5dp"
        app:layout_constraintTop_toBottomOf="@+id/ivSecondBadge"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dimen_10dp"
        tools:text="10 Doubts"/>


    <ImageView
        android:id="@+id/ivFirstBadge"
        android:layout_width="@dimen/dimen_40dp"
        android:layout_height="@dimen/dimen_50dp"
        app:layout_constraintEnd_toStartOf="@+id/ivSecondBadge"
        android:layout_marginEnd="45dp"
        android:src="@drawable/ic_bg_badge_85dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/tvTitleFirstBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:textStyle="bold"
        android:textSize="10sp"
        android:textColor="@color/grey_504949"
        android:layout_marginTop="@dimen/dimen_4dp"
        app:layout_constraintStart_toStartOf="@+id/ivFirstBadge"
        android:layout_marginStart="-5dp"
        app:layout_constraintTop_toBottomOf="@+id/ivFirstBadge"
        tools:text="5 Doubts"/>

</androidx.constraintlayout.widget.ConstraintLayout>