<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutFilters"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/tvLabelFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter your Results"
            android:textColor=" #17181f"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/dimen_16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:textSize="@dimen/dimen_12sp"
            android:fontFamily="@font/lato_bold"
            />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutFilter1"
            android:layout_width="0dp"
            android:layout_height="45dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/layoutFilter2"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:background="@drawable/bg_rounded_corner_grey"
            app:layout_constraintTop_toBottomOf="@+id/tvLabelFilter"
            android:layout_marginTop="@dimen/dimen_15dp"
            >

            <TextView
                android:id="@+id/tvLabelFilter1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject"
                android:textColor="@color/grey_969696"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="10sp"
                android:fontFamily="@font/lato_bold"
                android:layout_marginStart="@dimen/dimen_10dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="2.5dp"
                />

            <TextView
                android:id="@+id/tvValueFilter1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="All"
                android:paddingStart="@dimen/dimen_5dp"
                android:paddingEnd="@dimen/dimen_10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ivArrowFilter1"
                android:textSize="14sp"
                android:fontFamily="@font/lato"
                android:layout_marginStart="@dimen/dimen_10dp"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelFilter1"
                android:layout_marginTop="1dp"
                />

            <ImageView
                android:id="@+id/ivArrowFilter1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_arrow_down"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="4dp"
                android:textSize="15sp"
                android:layout_marginStart="@dimen/dimen_15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="2dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="15sp"
                android:layout_marginStart="@dimen/dimen_15dp"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelFilter1"
                android:layout_marginTop="2dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>





        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutFilter2"
            android:layout_width="0dp"
            android:layout_height="45dp"
            app:layout_constraintStart_toEndOf="@+id/layoutFilter1"
            app:layout_constraintEnd_toStartOf="@+id/layoutFilter3"
            android:layout_marginStart="@dimen/dimen_16dp"
            app:layout_goneMarginEnd="@dimen/dimen_16dp"
            android:background="@drawable/bg_rounded_corner_grey"
            app:layout_constraintTop_toTopOf="@+id/layoutFilter1"
            >

            <TextView
                android:id="@+id/tvLabelFilter2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class"
                android:textColor="@color/grey_969696"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="10sp"
                android:fontFamily="@font/lato_bold"
                android:layout_marginStart="@dimen/dimen_10dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="2.5dp"
                />

            <TextView
                android:id="@+id/tvValueFilter2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="All"
                android:paddingStart="@dimen/dimen_5dp"
                android:paddingEnd="@dimen/dimen_10dp"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:maxLines="1"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="14sp"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:fontFamily="@font/lato"
                app:layout_constraintEnd_toStartOf="@+id/ivArrowFilter2"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelFilter2"
                android:layout_marginTop="1dp"
                />

            <ImageView
                android:id="@+id/ivArrowFilter2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_arrow_down"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="4dp"
                android:textSize="15sp"
                android:layout_marginStart="@dimen/dimen_15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="2dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="15sp"
                android:layout_marginStart="@dimen/dimen_15dp"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelFilter2"
                android:layout_marginTop="2dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutFilter3"
            android:layout_width="0dp"
            android:layout_height="45dp"
            app:layout_constraintStart_toEndOf="@+id/layoutFilter2"
            app:layout_constraintEnd_toStartOf="@+id/layoutFilter4"
            android:layout_marginStart="@dimen/dimen_16dp"
            app:layout_goneMarginEnd="@dimen/dimen_16dp"
            android:background="@drawable/bg_rounded_corner_grey"
            app:layout_constraintTop_toTopOf="@+id/layoutFilter2"
            >

            <TextView
                android:id="@+id/tvLabelFilter3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Language"
                android:textColor="@color/grey_969696"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="10sp"

                android:fontFamily="@font/lato_bold"
                android:layout_marginStart="@dimen/dimen_10dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="2.5dp"
                />

            <TextView
                android:id="@+id/tvValueFilter3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="All"
                android:paddingStart="@dimen/dimen_5dp"
                android:paddingEnd="@dimen/dimen_10dp"
                android:textColor="@color/black"
                android:maxLines="1"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="14sp"
                android:ellipsize="end"
                android:fontFamily="@font/lato"
                android:layout_marginStart="@dimen/dimen_10dp"
                app:layout_constraintEnd_toStartOf="@+id/ivArrowFilter3"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelFilter3"
                android:layout_marginTop="1dp"
                />

            <ImageView
                android:id="@+id/ivArrowFilter3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_arrow_down"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="4dp"
                android:textSize="15sp"
                android:layout_marginStart="@dimen/dimen_15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="2dp"
                />

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="15sp"
                android:layout_marginStart="@dimen/dimen_15dp"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelFilter3"
                android:layout_marginTop="2dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutFilter4"
            android:layout_width="0dp"
            android:layout_height="45dp"
            app:layout_constraintStart_toEndOf="@+id/layoutFilter3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:background="@drawable/bg_rounded_corner_grey"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/layoutFilter2"
            >

            <TextView
                android:id="@+id/tvLabelFilter4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Language"
                android:textColor="@color/grey_969696"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="10sp"
                android:fontFamily="@font/lato_bold"
                android:layout_marginStart="@dimen/dimen_10dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="2.5dp"
                />

            <TextView
                android:id="@+id/tvValueFilter4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:textColor="@color/black"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="14sp"
                android:fontFamily="@font/lato"
                android:maxLines="1"
                android:layout_marginStart="@dimen/dimen_10dp"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelFilter4"
                android:layout_marginTop="1dp"
                />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_arrow_down"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="4dp"
                android:textSize="15sp"
                android:layout_marginStart="@dimen/dimen_15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="2dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="15sp"
                android:layout_marginStart="@dimen/dimen_15dp"
                app:layout_constraintTop_toBottomOf="@+id/tvLabelFilter4"
                android:layout_marginTop="2dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/btnClearAllFilters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear_all"
            android:textSize="13sp"
            android:padding="@dimen/dimen_8dp"
            android:fontFamily="@font/lato_bold"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:textColor="@color/grey_808080"
            android:enabled="false"
            app:layout_constraintTop_toTopOf="@id/tvLabelFilter"
            android:layout_marginTop="-8dp"
            tools:layout_editor_absoluteY="11dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutSecondaryTab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        app:layout_constraintTop_toBottomOf="@+id/layoutFilters"
        android:layout_marginTop="@dimen/dimen_10dp"
        app:layout_constraintStart_toStartOf="parent"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewSecondaryTabs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/dimen_10dp"
            />


        <TextView
            android:id="@+id/tvSecondaryTab1"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:fontFamily="@font/lato"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:paddingStart="@dimen/dimen_10dp"
            android:paddingEnd="@dimen/dimen_10dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Asked by Me"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tvSecondaryTab2"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:fontFamily="@font/lato"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/tvSecondaryTab1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:paddingStart="@dimen/dimen_10dp"
            android:paddingEnd="@dimen/dimen_10dp"
            android:gravity="center"
            android:visibility="gone"
            android:text="Solved by Me"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/emptyStateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/layoutSecondaryTab"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        >


        <ImageView
            android:id="@+id/ivEmpty"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvEmpty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/ivEmpty"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/dimen_40dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/dimen_40dp"
            android:fontFamily="@font/lato_bold"
            android:textSize="@dimen/font_16sp"
            android:layout_marginEnd="@dimen/dimen_40dp"
            android:text=""
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.doubtnutapp.widgetmanager.ui.WidgetisedRecyclerView
        android:id="@+id/rvDoubts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:translationX="-4dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutSecondaryTab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="RtlSymmetry"
        tools:itemCount="2"
        tools:listitem="@layout/widget_doubt_p2p" />

    <ProgressBar
        android:id="@+id/progressBarLoader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>