        <item name="tabPaddingBottom">0dp</item>
    </style>

    <style name="WidgetParentAutoPlayTabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="SelectMediumTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/color_eb532c</item>
        <item name="tabSelectedTextColor">@color/color_eb532c</item>
