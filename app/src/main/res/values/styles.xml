        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="ParentTabWidgetTabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="TabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="TabTextAppearance.TopicBoosterGameLeaderboard">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TabTextAppearance.TopicBoosterGameInviteFriend">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="myRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:maxHeight">@dimen/dimen_18dp</item>
    </style>

    <style name="TooltipTextAppearance">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="SgNotificationSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">@color/white</item>
    </style>

    <style name="VideoTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabIndicator">@null</item>
        <item name="tabSelectedTextColor">@color/color_eb532c</item>
