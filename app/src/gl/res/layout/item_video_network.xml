<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_video_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/lato_bold"
        android:gravity="start"
        android:maxLines="2"
        android:textColor="#17181f"
        android:textIsSelectable="true"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scrollbars="vertical"
        tools:text="Video 1" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_data_consumed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/lato"
        android:gravity="start"
        android:maxLines="2"
        android:textColor="@color/tomato"
        android:textIsSelectable="true"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_video_name"
        tools:text="10 MB" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_seek_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/lato_light"
        android:gravity="start"
        android:maxLines="2"
        android:textColor="#17181f"
        android:textIsSelectable="true"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_data_consumed"
        tools:text="20 seconds" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_engagement_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/lato_light"
        android:gravity="start"
        android:maxLines="2"
        android:textColor="#17181f"
        android:textIsSelectable="true"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_seek_time"
        tools:text="20 seconds" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_played_on"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/lato_light"
        android:gravity="start"
        android:maxLines="2"
        android:textColor="#17181f"
        android:textIsSelectable="true"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_engagement_time"
        tools:text="05/02/2022" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_qid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/lato_light"
        android:gravity="start"
        android:textColor="#17181f"
        android:textIsSelectable="true"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_played_on"
        tools:text="46387643786" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_content_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/lato_light"
        android:gravity="start"
        android:textColor="#17181f"
        android:textIsSelectable="true"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_qid"
        tools:text="type of content" />


</androidx.constraintlayout.widget.ConstraintLayout>