<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="4dp"
        app:strokeWidth="0.4dp"
        app:strokeColor="#40000000"
        app:cardUseCompatPadding="true"
        android:clipToPadding="false"
        app:cardElevation="4dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintDimensionRatio="19:10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/courseDetailLayout"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="@dimen/dimen_0dp"
                android:background="@color/colorTransparent"
                android:padding="7dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guidelineFacultyImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvHeading1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="@dimen/dimen_4dp"
                    android:layout_marginBottom="28dp"
                    android:background="#ffb198"
                    android:fontFamily="@font/lato"
                    android:paddingStart="8dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="3dp"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SmallSp"
                    tools:text="English Medium"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tvHeading2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="@dimen/dimen_4dp"
                    android:layout_marginBottom="28dp"
                    android:background="#ffb198"
                    android:fontFamily="@font/lato"
                    android:paddingStart="8dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="3dp"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/tvHeading1"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SmallSp"
                    tools:text="English Medium"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/lato_bold"
                    android:lineSpacingExtra="4.9sp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toTopOf="@+id/tvPrice"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvHeading1"
                    tools:text="Class 10 I Bihar Board \n Class 10 I Bihar Board  \n Class 10 I Bihar Board  \n Class 10 I Bihar Board  \n Class 10 I Bihar Board  \n Class 10 I Bihar Board" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="4.2sp"
                    android:textColor="#2a52d1"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/btCta"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="â‚¹300/Month" />

                <TextView
                    android:id="@+id/btCta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="9dp"
                    android:background="#ea532c"
                    android:fontFamily="@font/lato"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="3sp"
                    android:paddingStart="40dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="40dp"
                    android:paddingBottom="6dp"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/ivBottomText"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="SmallSp"
                    tools:text="View details" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivBottomText"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="12dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:src="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/tvBottomText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/lato"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="2.7sp"
                    android:textColor="#424040"
                    android:textSize="9sp"
                    android:maxLines="1"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/ivBottomText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ivBottomText"
                    app:layout_constraintTop_toTopOf="@+id/ivBottomText"
                    tools:ignore="SmallSp"
                    tools:text="2000+ students are taking this tuition" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rightHalfLayout"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="@dimen/dimen_0dp"
                android:background="#4ca4e3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/guidelineFacultyImage"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvSubject"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:gravity="center"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="5.4sp"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/tvSubjectMedium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:text="Maths" />

                <TextView
                    android:id="@+id/tvSubjectMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center"
                    android:lineSpacingExtra="3.5sp"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="normal"
                    app:flow_verticalBias="0.5"
                    app:layout_constraintBottom_toTopOf="@+id/tvCourseId"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvSubject"
                    tools:ignore="SmallSp"
                    tools:text="English Medium" />

                <TextView
                    android:id="@+id/tvCourseId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="11dp"
                    android:layout_marginBottom="14dp"
                    android:fontFamily="@font/lato"
                    android:lineSpacingExtra="3.2sp"
                    android:textColor="@color/white"
                    android:textSize="9sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="SmallSp"
                    tools:text="Course ID #790" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineFacultyImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".6" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>