<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="1dp"
    android:layout_marginTop="1dp"
    android:layout_marginEnd="1dp"
    android:layout_marginBottom="1dp"
    android:minHeight="110dp"
    app:cardBackgroundColor="#aae5bb"
    app:cardCornerRadius="4dp"
    tools:layout_margin="4dp"
    tools:layout_width="210dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="100dp" />

        <!-- 10 + 108 + 2 + 3 + 8-->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_title_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/lato_bold"
            android:gravity="start"
            android:includeFontPadding="false"
            android:maxHeight="78dp"
            android:maxLines="3"
            android:minLines="1"
            android:singleLine="false"
            android:textColor="#541388"
            android:textSize="22dp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Class 12th (Biology) 2021 - 2022" />

        <View
            android:id="@+id/view_divider_one"
            android:layout_width="49dp"
            android:layout_height="2dp"
            android:layout_marginTop="3dp"
            android:background="#ff006e"
            app:layout_constraintStart_toStartOf="@id/tv_title_one"
            app:layout_constraintTop_toBottomOf="@id/tv_title_one" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_title_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/lato_bold"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:minLines="1"
            android:textColor="#080808"
            android:textSize="20sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline"
            tools:text="2:00 - 3:00 PM" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_title_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/lato"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:minLines="1"
            android:textColor="#541388"
            android:textSize="20sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_two"
            tools:text="21 March 2020" />

        <View
            android:id="@+id/view_divider_two"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:alpha="0.17"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_title_three" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:maxLines="1"
            android:minLines="1"
            android:textColor="#ff0202"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_divider_two"
            tools:text="Register Now" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
