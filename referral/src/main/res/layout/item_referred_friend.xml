<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imageViewFriend"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/freshchat_ic_calendar_agent_avatar"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintTop_toTopOf="parent"
        />



    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_marginStart="@dimen/dimen_18dp"
        app:layout_constraintTop_toTopOf="@+id/imageViewFriend"
        app:layout_constraintStart_toEndOf="@+id/imageViewFriend"
        tools:text="Vikas Kumar Singh"/>



    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvPointsEarned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="22dp"
        android:textSize="20sp"
        android:textColor="#007aff"
        android:fontFamily="@font/lato_bold"
        android:layout_marginTop="5dp"
        tools:text ="+10"
        />




    <TextView
        android:id="@+id/tvSubHeading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:textStyle="normal"
        android:textSize="15sp"
        android:textColor="#707070"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        android:layout_marginTop="@dimen/dimen_2dp"
        app:layout_constraintStart_toStartOf="@+id/tvName"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Earned â‚¹10 paytm cash"/>

</androidx.constraintlayout.widget.ConstraintLayout>